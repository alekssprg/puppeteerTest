    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "My Test",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
               // "--grep",
               // "Service",
                "--timeout",
                "0",
                "${workspaceFolder}/test/bootstrap.js",
                "--recursive",
                "${workspaceFolder}/test",
                "--reporter",
                "mochawesome"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "My Test2",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\index.js"
        }
    ]
}